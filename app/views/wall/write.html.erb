<h4><%= flash[:alert] %></h4>

<div style="background-color: #e9eaed;">
	<h1>Write Post</h1>
	<form action="/wall/write_complete" method="post">
		Name: <input type="text" name="writer" value="<%= @user_write.username %>" readonly="readonly"><br>
		Content: <br>
		<textarea name="content" cols="40" rows="5" placeholder="Write something..."></textarea>
		<input type="submit" value="write">
	</form>
</div>